#!/bin/sh

SELFDIR=$(cd "$(dirname "$0")"; pwd)

# Debugging
echo "" >> /tmp/my-log
echo "invoke: $0" >> /tmp/my-log
echo "pwd: `pwd`" >> /tmp/my-log
echo "SELFDIR: $SELFDIR" >> /tmp/my-log

# Install tmux config
cp $SELFDIR/.tmux.conf ~/

cat >> ~/.bashrc << HERE

# hashtagchris/dotfile additions
export PATH=\$PATH:/workspaces/github/bin
HERE
